<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

<%= form_for(@style) do |f| %>
  <% if @style.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@style.errors.count, "error") %> prohibited this style from being saved:</h2>

      <ul>
      <% @style.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>New style</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">

<div class="row control-group">
     <label>Name</label>
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                               
                                  <%= f.label :name %>
                                  <%= f.text_field :name, :class => 'form-control' %>
                            </div>
                        </div>

    
  


<div class="row control-group">
     <label>Description</label>
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                               
                                  <%= f.label :description %>
                                  <%= f.text_area :description, :class => 'form-control' %>
                            </div>
                        </div>

    

  <div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :picture, :class => 'btn btn-success' %>
  </div>
  <div class="field">

    <%= f.hidden_field :id_user, :value => current_user.id  %>
  </div></br>
  <div class="actions">
    <%= f.submit "Submit your style", :class => 'btn btn-success' %>
  </div>
<% end %>

                </div>
            </div>
        </div>
    </section>