<h1>Listing Styles</h1>

<table>
  <thead>
    <tr>
      <th style="padding: 10px 10px 10px 10px">Name</th>
      <th style="padding: 10px 10px 10px 10px">Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <center>
    <% @styles.each do |style| %>
      <tr>
        <td style="padding: 10px 10px 10px 10px"><%= style.name %></td>
        <td style="padding: 10px 10px 10px 10px"><%= image_tag(style.picture,  :width => 150) %></td>
     <!-- To je sam ce je upisan da mu pokaze details al pa ne -->   <% if user_signed_in? %><td style="padding: 10px 10px 10px 10px"><%= link_to 'Details', style %></td>
        <% else %>

        <% end %>
      </tr>
    <% end %>
  </center>
  </tbody>
</table>

